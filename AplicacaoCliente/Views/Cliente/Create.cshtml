@model AplicacaoCliente.Models.Cliente
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="width:100%">
    <div class="col-6">
        <h2 class="text-primary">Lista de Clientes</h2>
    </div>
    <div class="col-4 text-right">
        <button type="button" onclick="limpar()" class="btn btn-info form-control" data-toggle="modal" data-target="#myModal">Criar Novo Cliente</button>
    </div>
</div>

<div class="p-4 border rounded bg-light">
    <table id="tblData" class="table table-bordered table-responsive-xl" width="100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Nomes</th>
                <th>Sobrenomes</th>
                <th>Endereco</th>
                <th>Telefone</th>
                <th>Estado</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>


<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <form method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <h2 class="modal-title text-primary text-center">Login do cliente</h2>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div style="padding-left:15%; padding-right:15%; padding-bottom:30px;">
                        <div class="row p-3 border-0">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>
                        <input type="hidden" id="clienteId" asp-for="Id" />

                        <div class="form-row" style="padding-top:10px;">
                            <div class="form-group col-md-6">
                                <label>Nomes</label>
                                <input asp-for="Nomes" id="clienteNomes" class="form-control" placeholder="Nomes" />
                                <span asp-validation-for="Nomes" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-6">
                                <label>Sobrenomes</label>
                                <input asp-for="Sobrenomes" id="clienteSobrenomes" class="form-control" placeholder="Sobrenomes" />
                                <span asp-validation-for="Sobrenomes" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-10">
                                <label>Endereço</label>
                                <input asp-for="Endereco" id="clienteEndereco" class="form-control" placeholder="Endereço" />
                                <span asp-validation-for="Endereco" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-10">
                                <label>Telefone</label>
                                <input asp-for="Telefone" id="clienteTelefone" class="form-control" placeholder="Teléfone" />
                                <span asp-validation-for="Telefone" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-10">
                                <label>Estado</label>
                                <select asp-for="Estado" id="clienteEstado" class="form-control">
                                    <option value="true">Ativo</option>
                                    <option value="false">Inativo</option>
                                </select>
                                <span asp-validation-for="Estado" class="text-danger"></span>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Fechar</button>
                    <button type="submit" class="btn btn-success">Salvar alterações</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
        <script src="~/js/cliente.js"></script>
}

